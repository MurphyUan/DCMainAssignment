<body>
    <h1>Add Student</h1>
    <!-- If Errors exist display each error as list item -->
    <% if (errors != undefined) {%>
        <ul>
            <% errors.forEach((error) =>{ %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
    <!-- Form to Add New Student -->
    <form action="/addLecturer" method="post">
        <label>Lecturer ID</label>
        <input type="text" name="_id" value="<%= _id %>"><br>
        <label>Name</label>
        <input type="text" name="name" value="<%= name %>"><br>
        <label>DEPT</label>
        <input type="text" name="dept" value="<%= dept %>">
        <input type="submit" value="Add"/>
    </form>
</body>